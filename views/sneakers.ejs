<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sneakers</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
    />
    <link rel="stylesheet" type="text/css" href="style.css" />
    <style>
        /* Reset some default styling */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Arial', sans-serif;
    background-color: #f5f5f5;
    color: #333;
    line-height: 1.6;
}
select {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 5px;
        border: 1px solid #ddd;
    }
    button {
        display: block;
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: white;
        cursor: pointer;
        font-size: 16px;
    }
    #brandForm {
        background: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
    }
    button:hover {
        background-color: #0056b3;
    }

.container {
    max-width: 1200px;
    margin: auto;
    padding: 0 15px;
}

.product-row {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
    padding: 20px 0;
}

.product-col {
    background-color: #ffffff;
    border: 1px solid #ddd;
    border-radius: 5px;
    overflow: hidden;
    transition: transform 0.3s ease-in-out;
}

.product-col:hover {
    transform: translateY(-5px);
}

.img-fluid {
    max-width: 100%;
    height: auto;
}

h4, p {
    padding: 0 15px;
}

p {
    color: #6c757d;
}

    </style>

</head>
<body>

    <header class="mb-3">
        <div class="container-fluid bg-info">
          <div class="row align-items-center">
            <div class="col-4 col-xl-1 col-lg-2 col-md-2 col-sm-2">
              <h5>
                <a
                  href="/main"
                  class="text-center text-white fw-bold fs-1 mr-1"
                  data-i18n="tabo"
                  >TABO</a
                >
              </h5>
            </div>
            <div class="col-4 col-xl-1 col-lg-2 col-md-2 col-sm-2">
              <div class="language-selector">
                <select id="lang-select">
                  <option value="en" data-i18n="english">English</option>
                  <option value="ru" data-i18n="russian">Русский</option>
                </select>
              </div>
            </div>

            <div class="col-6 col-xl-6 col-lg-6 col-3 col-md-3 col-sm-3">
              <nav
                class="navbar navbar-expand-lg justify-content-center align-items-center"
              >
                <ul class="nav navbar-nav align-items-center">
                  <li class="nav-item">
                    <h5>
                      <a
                        class="nav-link mx-2 active text-white fw-bold fs-3"
                        href="/main"
                        data-i18n="home"
                        >Home</a
                      >
                    </h5>
                  </li>
                  <li class="nav-item px-3">
                    <h5>
                      <a
                        class="nav-link mx-2 active text-white fw-bold fs-3"
                        href="/shop"
                        data-i18n="shop"
                        >Shop</a
                      >
                    </h5>
                  </li>
                  <li class="nav-item pr-3">
                    <h5>
                      <a
                        class="nav-link mx-2 active text-white fw-bold fs-3"
                        href="/brands"
                        data-i18n="brands"
                        >Brands</a
                      >
                    </h5>
                  </li>
                  <li class="nav-item pr-3">
                    <h5>
                      <a
                        class="nav-link mx-2 active text-white fw-bold fs-3"
                        href="/contacts"
                        data-i18n="contacts"
                        >Contacts</a
                      >
                    </h5>
                  </li>
                </ul>
              </nav>
            </div>

            <div class="col-12 col-xl-4 col-lg-3 col-sm-6 col-md-6">
              <div
                class="row align-items-center justify-content-center icon-row"
              >
                <% if (adminStatus) { %>
                <div class="col-3">
                  <a class="text-dark" href="/admin" target="blank"
                    ><i
                      class="fa-solid fa-circle-info fa-2x"
                      aria-hidden="true"
                    ></i
                  ></a>
                </div>
                <% } %>
                <div class="col-3">
                  <a class="text-dark" href="/cart" target="blank"
                    ><i
                      class="fa-solid fa-shopping-cart fa-2x"
                      aria-hidden="true"
                    ></i
                  ></a>
                </div>

                <div class="col-3 d-flex flex-column align-items-center">
                  <form action="/signout" method="post">
                    <button type="submit" class="btn signOut">
                      <i class="fa-solid fa-arrow-right-from-bracket fa-2x"></i>
                    </button>
                  </form>
                </div>

                <div class="col-3 d-flex flex-column align-items-center">
                  <i class="fa fa-user fa-2x" aria-hidden="true"></i>
                  <% if (username) { %>
                  <span class="text-center"><%= username %></span>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </header>
    
    
    <h1 class="text-center text-primary" data-i18n="sneakers">Sneakers</h1>
    <form id="brandForm" method="GET">
        <label for="brand" data-i18n="selectBrand">Select a brand:</label>
        <select name="brand" id="brandSelect">
            <option value="gucci">Gucci</option>
            <option value="balenciaga">Balenciaga</option>
            <option value="chanel">Chanel</option>
            <option value="dior">Dior</option>
            <option value="fendi">Fendi</option>
            <option value="louisvuitton">Louis Vuitton</option>
            <option value="nike">Nike</option>
            <option value="adidas">Adidas</option>
            <option value="versace">Versace</option>
        </select>
        <button type="submit" data-i18n="submit_button">Submit</button>
    </form>
    
    <div class="container-fluid">
        <% if (sneakersData.results.length > 0) { %>
            <div class="row mb-3 justify-content-center product-row">
                <% sneakersData.results.forEach((sneaker, index) => { %>
                    <div class="col-md-6 col-lg-3 text-center product-col">
                        <a href="#" onclick="openModal('<%= sneaker.media.imageUrl %>', '<%= sneaker.name %>'); return false;">
                            <img src="<%= sneaker.media.imageUrl %>" alt="<%= sneaker.name %>" class="img-fluid" style="max-width: 100%; max-height: 200px;">
                        </a>
                        <h4><%= sneaker.name %></h4>
                        <p style="color: greenyellow;"><%= sneaker.retailPrice %> $</p>
                    </div>
                    <% if ((index + 1) % 4 === 0 || index === sneakersData.results.length - 1) { %>
            </div>
            <div class="row mb-3 justify-content-center product-row">
                <% } %>
                <% }); %>
            </div>
        <% } else { %>
            <p>No sneakers found for the selected brand.</p>
        <% } %>
    </div>
    
    <footer class="bg-light text-dark mt-5">
        <div class="container p-4">
          <div class="row">
            <div class="col-lg-6 col-md-12 mb-4">
              <h5 class="mb-3 text-dark" data-i18n="about_shop">
                About Our Shop
              </h5>
              <p data-i18n="shop_description">
                Welcome to TABO SHOP! We offer a wide range of high-quality
                products to meet your fashion needs. Explore our collection and
                find the perfect items for your style.
              </p>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
              <h5 class="mb-3 text-dark" data-i18n="links">Links</h5>
              <ul class="list-unstyled mb-0">
                <li class="mb-1">
                  <a href="/faq" style="color: #4f4f4f" data-i18n="faq">FAQ</a>
                </li>

                <li class="mb-1">
                  <a
                    href="/brands"
                    style="color: #4f4f4f"
                    data-i18n="collaborations"
                    >Collabarations</a
                  >
                </li>
                <li>
                  <a
                    href="/contacts"
                    style="color: #4f4f4f"
                    data-i18n="contact_us"
                    >Contact us</a
                  >
                </li>
              </ul>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
              <h5 class="mb-1 text-dark" data-i18n="opening_hours">
                Opening Hours
              </h5>
              <table class="table" style="border-color: #666">
                <tbody>
                  <tr>
                    <td data-i18n="mon_fri">Mon - Fri:</td>
                    <td data-i18n="mon_fri_hours">8am - 9pm</td>
                  </tr>
                  <tr>
                    <td data-i18n="sat_sun">Sat - Sun:</td>
                    <td data-i18n="sat_sun_hours">8am - 1am</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div
          class="text-center p-3"
          style="background-color: rgba(0, 0, 0, 0.2)"
        >
          © 2023 TABO SHOP
        </div>
      </footer>

    <script>
        // Get the form and select element
        const form = document.getElementById('brandForm');
        const brandSelect = document.getElementById('brandSelect');

        // Add event listener to the select element
        brandSelect.addEventListener('change', function() {
            // Get the selected brand
            const selectedBrand = brandSelect.value;

            // Update the form action with the selected brand
            form.action = `/sneakers?brand=${selectedBrand}`;
        });
        document.addEventListener("DOMContentLoaded", function() {
            const brandSelect = document.getElementById("brand");
            const brandForm = document.getElementById("brandForm");

            // Check if there's a selected option stored in local storage
            const selectedBrand = localStorage.getItem("selectedBrand");
            if (selectedBrand) {
                // Set the selected option to the one stored in local storage
                brandSelect.value = selectedBrand;
            }

            // When the selection changes, store the selected option in local storage
            brandSelect.addEventListener("change", function() {
                localStorage.setItem("selectedBrand", this.value);
                // Submit the form when the selection changes
                brandForm.submit();
            });
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="js/i18n/jquery.i18n.js"></script>
    <script src="js/i18n/jquery.i18n.messagestore.js"></script>
    <script src="js/i18n/jquery.i18n.fallbacks.js"></script>
    <script src="js/i18n/jquery.i18n.language.js"></script>
    <script src="js/i18n/jquery.i18n.parser.js"></script>
    <script src="js/i18n/jquery.i18n.emitter.js"></script>
    <script src="js/i18n/jquery.i18n.emitter.bidi.js"></script>
    <script src="js/i18n/languages/ru.js"></script>
    <script src="js/global.js"></script>
</body>
</html>
