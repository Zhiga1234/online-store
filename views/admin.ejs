<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Toyota</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
  </head>
  <body>
    <div class="container">
      <h1 class="dashboard-header text-center">Enhanced Admin Dashboard</h1>
      <div class="row">
        <div class="d-flex justify-content-center mb-3">
            <a href="/main" class="btn btn-primary btn-custom">Go to Main Page</a>
          </div>
          <div class="d-flex justify-content-center mb-3">
            <a href="/item-changing" class="btn btn-primary btn-custom">Go To Item Changing</a>
          </div>
      </div>
      <div class="table-responsive">
        <table class="table table-custom align-middle">
          <thead>
            <tr>
              <th>Username</th>
              <th>Email</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(function(user){ %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td>
                <span
                  class="status-badge <%= user.adminStatus ? 'status-admin' : 'status-user' %>"
                >
                  <%= user.adminStatus ? 'Admin' : 'User' %>
                </span>
              </td>
              <td class="table-actions">
                <button
                  class="btn btn-info btn-custom"
                  onclick="location.href='/edit-user/<%= user._id %>'"
                >
                  <i class="fas fa-edit"></i> Edit
                </button>
                <button
                  class="btn btn-danger btn-custom"
                  onclick="location.href='/delete-user/<%= user._id %>'"
                >
                  <i class="fas fa-trash-alt"></i> Delete
                </button>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    
  </body>
</html>